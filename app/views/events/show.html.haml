%h1 Event Details

%p= link_to 'Edit', edit_event_path(@event)
%p= link_to 'Delete', event_path(@event), method: :delete, confirm: 'Are you sure?'

%dl
  %dt Name
  %dd= @event.name

  %dt Start At
  %input#datetimepicker{:type => "text"}/

  %dt End At
  %input#datetimepicker{:type => "text"}/

  %dt Description
  %dd= @event.description

%p= link_to 'Back', calendar_path
